

<h1>App Groups</h1>

<table class="table table-responsive table-hover">
  <thead class="table-dark bg-dark">
    <tr>
      <th>Group name</th>
      <th>Group description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_groups.each do |app_group| %>
      <tr>
        <td><%= app_group.group_name %></td>
        <td><%= app_group.group_description %></td>
        <td><%= link_to "Show", app_group %></td>
        <td><%= link_to "Edit", edit_app_group_path(app_group) %></td>
        <td><%= link_to "Destroy", app_group, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New App Group", new_app_group_path %>
