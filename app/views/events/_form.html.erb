<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6">
    <%= form.number_field :app_id, value: session[:current_app], type: :hidden %>

    <div class="field form-group">
      <%= form.text_area :website, class: "form-control", required: "required" %>
      <%= form.label :website %>
    </div>

    <div class="field form-group">
      <%= form.text_area :email, class: "form-control", required: "required" %>
      <%= form.label :email %>
    </div>

    <div class="field form-group">
      <%= form.text_area :event, class: "form-control", required: "required" %>
      <%= form.label :event %>
    </div>

    <div class="field form-group">
      <%= form.label :time %>
      <%= form.datetime_select :time, class: "form-control", required: "required" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
