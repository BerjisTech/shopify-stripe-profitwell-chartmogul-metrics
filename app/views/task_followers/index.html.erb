<p id="notice"><%= notice %></p>

<h1>Task Followers</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_followers.each do |task_follower| %>
      <tr>
        <td><%= task_follower.task_id %></td>
        <td><%= task_follower.user_id %></td>
        <td><%= link_to "Show", task_follower %></td>
        <td><%= link_to "Edit", edit_task_follower_path(task_follower) %></td>
        <td><%= link_to "Destroy", task_follower, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

