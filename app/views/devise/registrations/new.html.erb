<div class="row login-page-row">
  <div class="col-sm-6 hidden-xs login-page-empty">
    <img src="https://assets.ltvsaasgrowth.com/images/5cbf852e9172ce00235e92ab_optimized.png">
  </div>
  <div class="col-sm-6 login-form-column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field col my-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email", required: "true" %>
      </div>

      <div class="field col my-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Password", required: "true" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="field col my-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confimr Password", required: "true" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-md my-3" %>
      </div>
      <hr />
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
