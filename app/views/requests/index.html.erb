<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Requested by</th>
      <th>Requested from</th>
      <th>Request</th>
      <th>Provided</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= Account.full_names(request.requested_by) %></td>
        <td><%= Account.full_names(request.requested_from) %></td>
        <td><%= request.request %></td>
        <td>
          <%= "yes" if request.provided.to_i.positive? %>
          <%= "no" if request.provided.to_i.zero? %>
        </td>
        <td><%= link_to "Show", request %></td>
        <td><%= link_to "Edit", edit_request_path(request) %></td>
        <td><%= link_to "Destroy", request, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

