<%= form_with(model: call) do |form| %>
  <% if call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
        <% call.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6">
    <%= form.number_field :app_id, value: session[:current_app], type: :hidden %>

    <div class="field form-group">
      <%= form.number_field :user_id, class: "form-control", required: "required" %>
      <%= form.label :user_id %>
    </div>

    <div class="field form-group">
      <%= form.text_field :ticket, class: "form-control", required: "required" %>
      <%= form.label :ticket %>
    </div>

    <div class="field form-group">
      <%= form.text_area :comment, class: "form-control", required: "required" %>
      <%= form.label :comment %>
    </div>

    <div class="field form-group">
      <%= form.label :date %>
      <%= form.datetime_select :date, class: "form-control", required: "required" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
